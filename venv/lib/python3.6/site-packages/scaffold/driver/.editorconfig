# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
# Don't trim out of markdown
trim_trailing_whitespace = false

[tests/**/*.txt]
# Don't touch txt files in tests, as they are used sometimes as test fixtures
# and they must compare exactly bit for bit
insert_final_newline = false
trim_trailing_whitespace = false
